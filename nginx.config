##
##  /etc/nginx/sites-available/nomability.net
##  UPDATED: Fixed proxy headers for Cloudflare Real IP
##  NOTE: real_ip_header must be configured in /etc/nginx/nginx.conf
##

# ─────────────────────────────────────────────────────────────
# 1) HTTPS Server Block (Port 443)
# ─────────────────────────────────────────────────────────────
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name nomability.net www.nomability.net;
    
    # Security: Hide Nginx version
    server_tokens off;
    
    # Root for static files
    root /home/host/hosting/nomability/public;
    index index.html;
    
    # SSL Configuration (managed by Certbot)
    ssl_certificate /etc/letsencrypt/live/nomability.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nomability.net/privkey.pem;
    
    # Modern TLS only
    ssl_protocols TLSv1.2 TLSv1.3;
    
    # Modern cipher suite
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    
    # SSL session configuration
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;
    
    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/letsencrypt/live/nomability.net/chain.pem;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    
    # ========================================================================
    # LOCATION BLOCKS
    # ========================================================================
    
    # 1. Frontend HTML routes -> Node.js (Port 3002)
    location / {
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        # FIXED: Now passes real client IP from Cloudflare
        proxy_set_header X-Real-IP $realip_remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header CF-Connecting-IP $http_cf_connecting_ip;
    }
    
    # 2. Proxy API Requests
    location /api/ {
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        # Allow long uploads/processing
        proxy_request_buffering off;
        proxy_buffering off;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        send_timeout 300s;
        # FIXED: Now passes real client IP from Cloudflare
        proxy_set_header X-Real-IP $realip_remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header CF-Connecting-IP $http_cf_connecting_ip;
    }
    
    # 3. Proxy Socket.IO
    location /socket.io/ {
        proxy_pass http://127.0.0.1:3003/socket.io/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        # FIXED: Now passes real client IP from Cloudflare
        proxy_set_header X-Real-IP $realip_remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header CF-Connecting-IP $http_cf_connecting_ip;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 60s;
    }
    
    # 4. ADMIN Dashboard - RESTRICTED
    location /admin {
        # SECURITY: Only allow access from trusted IPs.
        # Update these to your public IP/VPN range.
        allow 127.0.0.1;
        deny all;
        
        proxy_pass http://127.0.0.1:3003/admin;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $realip_remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header CF-Connecting-IP $http_cf_connecting_ip;
    }
    
    # 5. Admin Assets
    location ~ ^/admin/.* {
        allow 127.0.0.1;
        deny all;
        
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $realip_remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header CF-Connecting-IP $http_cf_connecting_ip;
    }
    
    # Static-asset cache & gzip
    gzip on;
    gzip_types text/css application/javascript image/svg+xml application/json;
    location ~* ^(?!/socket\.io/).*\.(?:css|js|jpg|jpeg|png|gif|ico|svg|webp|ttf|woff2?)$ {
        expires off;
        add_header Cache-Control "no-cache" always;
        try_files $uri =404;
    }
    
    # Let's Encrypt HTTP-01 hook
    location ^~ /.well-known/acme-challenge/ {
        allow all;
        root /home/host/hosting/nomability/public;
    }
    
    # Match large audio uploads
    client_max_body_size 500M;
    
    # Security constraints
    location ~ /\.(?!well-known).* {
        deny all;
        access_log off;
        log_not_found off;
    }
    location ~* \.(bak|conf|dist|fla|in|inc|ini|log|psd|sh|sql|swp)$|~ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Logs
    access_log /var/log/nginx/nomability.access.log;
    error_log  /var/log/nginx/nomability.error.log warn;
}

# ─────────────────────────────────────────────────────────────
# 2) HTTP Redirect Block (Port 80 -> HTTPS)
# ─────────────────────────────────────────────────────────────
server {
    listen 80;
    listen [::]:80;
    server_name nomability.net www.nomability.net;
    
    # Security: Hide Nginx version
    server_tokens off;
    
    # Let's Encrypt HTTP-01 challenge
    location ^~ /.well-known/acme-challenge/ {
        allow all;
        root /home/host/hosting/nomability/public;
    }
    
    # Redirect all other HTTP traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# ─────────────────────────────────────────────────────────────
# 3) API Subdomain (DNS-only, no Cloudflare proxy)
# ─────────────────────────────────────────────────────────────
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name api.nomability.net;

    server_tokens off;

    ssl_certificate /etc/letsencrypt/live/nomability.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/nomability.net/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;

    # Match large audio uploads
    client_max_body_size 2G;

    location / {
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_request_buffering off;
        proxy_buffering off;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        send_timeout 300s;
    }
}

server {
    listen 80;
    listen [::]:80;
    server_name api.nomability.net;

    server_tokens off;

    location / {
        return 301 https://$host$request_uri;
    }
}
